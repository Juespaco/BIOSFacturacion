@using MudBlazor

<MudDialog>    
    <DialogContent>
        <MudText>@Message</MudText>        
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error"
                   Variant="Variant.Filled"
                   OnClick="() => MudDialog.Close(DialogResult.Ok(true))">
            @ConfirmText
        </MudButton>

        <MudButton Color="Color.Default"
                   OnClick="() => MudDialog.Close(DialogResult.Ok(false))">
            @CancelText
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    // Elimina este parámetro si ya lo estás pasando como título del diálogo
    [Parameter] public string? Title { get; set; } = string.Empty;
    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public string ConfirmText { get; set; } = "Eliminar";
    [Parameter] public string CancelText { get; set; } = "Cancelar";
}